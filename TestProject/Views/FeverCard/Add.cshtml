@model TestProject.Models.FeverCard

<h2>Add</h2>

<form method="post">
    <div>
        <p>@Html.LabelFor(m => m.Doctor_id)</p>
        <p>@Html.DropDownListFor(m => m.Doctor_id, new SelectList(ViewBag.Doctors, "Doctor_id", "Doctor_surname") )</p>

        @Html.HiddenFor(m => m.Patient_id)

        <p>@Html.LabelFor(m => m.Patient_age)</p>
        <p>@Html.TextBoxFor(m => m.Patient_age)</p>

        <p>@Html.LabelFor(m => m.Weight)</p>
        <p>@Html.TextBoxFor(m => m.Weight)</p>

        <p>@Html.LabelFor(m => m.Hospital)</p>
        <p>@Html.TextBoxFor(m => m.Hospital)</p>

        <input type="submit" value="Zapisz" />
    </div>
</form>