@model List<TestProject.Models.Patient>

<h2>Lista pacjentów</h2>

<form method="post" action="~/Patient/Search">
    <div>      
        <div class="form-inline">
            @Html.TextBox("pattern", null, new { @class = "form-control", @placeholder="Wyszukaj pacjentów..." })
            <input type="submit" value="Wyszukaj" class="btn btn-secondary">
        </div>
    </div>
</form>
<br />
<p> @Html.ActionLink("Dodaj pacjenta", "Add", "Patient", new { @class = "btn btn-primary"})</p>

<style>
    td, th {
        border: 1px solid black;
        
    }
</style>

    <div>
        <table  WIDTH=100% >
            <tr>
                <td align="center" style="font-weight: bold">ID</td>
                <td align="center" style="font-weight: bold">Imię</td>
                <td align="center" style="font-weight: bold">Nazwisko</td>
                <td align="center" style="font-weight: bold">PESEL</td>
                <td></td>
                <td></td>
            </tr>
            @foreach (var item in Model)
            {
                <tbody>
                    <tr>
                        <td align="center">@item.Patient_id</td>
                        <td align="center">@item.Name</td>
                        <td align="center">@item.Surname</td>
                        <td align="center">@item.PESEL</td>
                        <td align="center">@Html.ActionLink("Edytuj pacjenta", "Edit", "Patient", new { @item.Patient_id }, null)</td>
                        <td align="center">@Html.ActionLink("Usuń", "Delete", "Patient", new { @item.Patient_id }, null)</td>
                    </tr>
                </tbody>
            }
        </table>

    </div>